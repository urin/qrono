{
  "name": "qrono",
  "version": "1.0.0",
  "description":
    "A 4kB JavaScript date library with 100+ APIs and strict DST guarantees.",
  "license": "MIT",
  "keywords": [
    "qrono",
    "date",
    "time",
    "immutable"
  ],
  "author": "urin <urinkun@gmail.com> (https://github.com/urin/)",
  "homepage": "https://qronojs.dev/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/urin/qrono.git"
  },
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist",
    "src",
    "types"
  ],
  "module": "dist/qrono.js",
  "main": "dist/qrono.cjs",
  "unpkg": "dist/qrono.min.js",
  "jsdeliver": "dist/qrono.min.js",
  "types": "types/qrono.d.ts",
  "scripts": {
    "prepare": "husky && npm run lint && npm run build",
    "postpublish": "jsr publish --no-provenance",
    "lint": "oxlint ./src ./tests",
    "lint:fix": "oxlint --fix ./src ./tests && prettier --write .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "build": "vite build --minify",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@vitest/ui": "^4.0.18",
    "husky": "^9.1.7",
    "jsr": "^0.14.2",
    "mockdate": "^3.0.5",
    "oxlint": "^1.43.0",
    "prettier": "^3.8.1",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-oxlint": "^1.6.0",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.18"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
