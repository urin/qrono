{
  "name": "qrono",
  "version": "1.1.3",
  "description": "A 4kB JavaScript date library with 100+ APIs and strict DST guarantees.",
  "license": "MIT",
  "keywords": [
    "qrono",
    "date",
    "time",
    "immutable"
  ],
  "author": "urin <urinkun@gmail.com> (https://github.com/urin/)",
  "homepage": "https://qronojs.dev/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/urin/qrono.git"
  },
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist",
    "src",
    "types"
  ],
  "module": "dist/qrono.js",
  "main": "dist/qrono.cjs",
  "unpkg": "dist/qrono.min.js",
  "jsdeliver": "dist/qrono.min.js",
  "types": "types/qrono.d.ts",
  "scripts": {
    "prepare": "husky && npm run format && npm run lint && npm run build",
    "postpublish": "jsr publish --no-provenance",
    "lint": "biome lint ./src ./tests",
    "lint:fix": "biome lint --write ./src ./tests",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome check ./src ./tests",
    "check:fix": "biome check ./src ./tests --write",
    "build": "vite build --minify",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@vitest/ui": "^4.0.18",
    "husky": "^9.1.7",
    "jsr": "^0.14.3",
    "lint-staged": "^16.2.7",
    "mockdate": "^3.0.5",
    "vite": "^7.3.1",
    "vitepress": "^1.6.4",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "src/**/*.{js,mjs,cjs,ts,tsx,jsx}": [
      "biome check --write",
      "vitest related"
    ],
    "tests/**/*.{js,mjs,cjs,ts,tsx,jsx}": [
      "biome check --write",
      "vitest related"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
